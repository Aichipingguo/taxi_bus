<div>
  <h3><%= @article.new_record? ? "新增文章" : "修改文章" %></h3>
</div>
<div class="form-body">
  <%=simple_form_for @article,
    url: (@article.new_record? ? ancient_articles_path : ancient_article_path(@article)),
    method: (@article.new_record? ? 'post' : 'put'),
    html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">文章题目：*</label>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="abstract" class="col-sm-2 control-label">摘要：*:</label>
      <div class="col-sm-5">
        <%= f.text_field :abstract, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="content" class="col-sm-2 control-label">文章详情：*</label>
      <div class="col-sm-5">
        <%= f.text_area :content, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit (@article.new_record? ? "新建商品" : "编辑商品"), class: "btn btn-default" %>
      </div>
    </div>
  <% end -%>
</div>
