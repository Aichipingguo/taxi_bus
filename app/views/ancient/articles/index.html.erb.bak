<h3 class="sub-header">文章列表</h3>
 <div class="pull-right page-header">
    <%= link_to "新建文章", new_ancient_article_path, class: "btn btn-primary" %>
</div>
<div class="table">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>序号</th>
          <th>文章名称</th>
          <th>文章分类</th>
          <th>文章摘要</th>
          <th>发布人</th>
          <th>发布时间</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
      <% @articles.each do |article|%>
        <tr>
          <td></td>
          <td><%=article.try(:name)%></td>
          <td><%=article.art_catalog.try(:name)%></td>
          <td><%=article.try(:abstract)%></td>
          <td><%=article.user.try(:name)%></td>
          <td><%=article.try(:publish_time)%></td>
          <td></td>
        </tr>
      <%end%>
      </tbody>
    </table>
  </div>