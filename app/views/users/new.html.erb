<div class="container">
  <%= form_for :user, url:users_path, method: :post, :html => {class: "form-signin" }  do  |f|%>
    <h2 class="form-signin-heading" style="color:white">用户注册</h2>
    <label for="inputEmail" class="sr-only">邮箱</label>
      <%=f.text_field :email, class: "form-control", placeholder: "请填写邮箱" %>
    <label for="inputEmail" class="sr-only">登陆账号</label>
      <%=f.text_field :loginname,class: "form-control", placeholder: "请填写登陆名" %>
    <label for="inputPassword" class="sr-only">密码</label>
      <%=f.password_field :password,  class: "form-control", placeholder: "请填写密码" %>
    <label for="inputPassword" class="sr-only">确认密码</label>
      <%=f.password_field :password_confirmation, class: "form-control", placeholder: "请确认密码" %>
    <%=submit_tag  '保存' , class: 'btn btn-lg btn-primary btn-block'%>
  <%end%>
</div> <!-- /container -->

